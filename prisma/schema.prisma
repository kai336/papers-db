datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model Paper {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  authors    String[] // ← 配列OK！
  year      Int
  tags      String[]
  summary   String
  pdfPath   String
  originalName String?
  createdAt DateTime?
}
