datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}


model Paper {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  year      Int
  tags      String
  summary   String
  pdfPath   String
  originalName String?
  createdAt DateTime @default(now())
}
